<h3>Reviews</h3>

<h4>Reviews for <%= @product.name %></h4>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
        <%= link_to "Edit", edit_product_review_path(@product, review) %>
      <% end %>
    </p>
  <% end %>