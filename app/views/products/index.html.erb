<h1>Products total:  <%= @products.length %></h1>
<%= link_to "New Product", new_product_path %>

<% @products.each do |product| %>
  <p><%= product[:name] %>, <%= truncate(product[:description], length: 50) %></p>
  <p>$<%= product.formatted_price %>
  <p><%= link_to "Show Product", "products/#{product.id}" %></p>
<% end %>

